<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find 4ws_auto_infantry)/urdf/suspension/suspension.transmission.xacro"/>
  <xacro:include filename="$(find 4ws_auto_infantry)/urdf/suspension/suspension.gazebo.xacro"/>

  <xacro:macro name="steering_v0" params="prefix parent *joint_origin *joint_axis file_prefix">
    <joint name="${prefix}_steering_joint" type="continuous">
      <xacro:insert_block name="joint_origin"/>
      <parent link="${parent}"/>
      <child link="${prefix}_steering_link"/>
      <limit effort="100" velocity="10"  />
      <xacro:insert_block name="joint_axis"/>
    </joint>

    <link name="${prefix}_steering_link">
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
          filename="package://4ws_auto_infantry/meshes/${file_prefix}_steering_link.STL" />
        </geometry>
        <material
          name="">
          <color
          rgba="0.792156862745098 0.819607843137255 0.933333333333333 1" />
        </material>
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
          filename="package://4ws_auto_infantry/meshes/${file_prefix}_steering_link.STL" />
        </geometry>
      </collision>
      <inertial>
      <origin
        xyz="-8.16524998191182E-05 0.0114879374465855 -0.0535777256855584"
        rpy="0 0 0" />
      <mass
        value="0.053948109921657" />
      <inertia
        ixx="7.48170891927309E-05"
        ixy="7.79475161983056E-08"
        ixz="-2.17674263673885E-07"
        iyy="0.000106662535876269"
        iyz="-5.78832135652101E-08"
        izz="8.18863215714512E-05" />
    </inertial>
    </link>
  </xacro:macro>

</robot>
