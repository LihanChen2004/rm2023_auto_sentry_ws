<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find 4ws_auto_infantry)/urdf/suspension/suspension.transmission.xacro"/>
  <xacro:include filename="$(find 4ws_auto_infantry)/urdf/suspension/suspension.gazebo.xacro"/>
  
  <xacro:macro name="steering_pitch" params="prefix parent *joint_origin *joint_axis">
	<joint name="${prefix}_steering_joint" type="revolute">
	  <xacro:insert_block name="joint_origin"/>
	  <parent link="${parent}"/>
	  <child link="${prefix}_steering_link"/>
          <limit effort="500" velocity="6.28"  lower="-1.57" upper="1.57" />
          <xacro:insert_block name="joint_axis"/>
	</joint>

	<link name="${prefix}_steering_link">
	 <inertial>
      <origin
        xyz="0.0218295214644216 -0.00572718193836697 0.0223154294531415"
        rpy="0 0 0" />
      <mass
        value="0.16996603358887" />
      <inertia
        ixx="0.000869741345762696"
        ixy="1.93480998509698E-06"
        ixz="1.49079616459806E-05"
        iyy="0.00321720011981406"
        iyz="-1.2188670424588E-06"
        izz="0.0036436239270771" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://4ws_auto_infantry/meshes/pitch_link.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="0.79216 0.81961 0.93333 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://4ws_auto_infantry/meshes/pitch_link.STL" />
      </geometry>
    </collision>
	</link>
  </xacro:macro>
  
</robot>
