<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find 4ws_auto_infantry)/urdf/wheel/wheel.transmission.xacro"/>
  <xacro:include filename="$(find 4ws_auto_infantry)/urdf/wheel/wheel.gazebo.xacro"/>

  <xacro:macro name="wheel_v0" params="prefix parent *joint_origin *joint_axis file_prefix" >
    <joint name="${prefix}_wheel_joint" type="continuous">
      <xacro:insert_block name="joint_origin"/>
      <parent link="${parent}"/>
      <child link="${prefix}_wheel_link"/>
      <limit effort="10" velocity="50"/>
      <xacro:insert_block name="joint_axis"/>
    </joint>

    <link name="${prefix}_wheel_link">
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
          filename="package://4ws_auto_infantry/meshes/${file_prefix}_wheel_link.STL" />
        </geometry>
        <material
          name="">
        <color
          rgba="0.792156862745098 0.819607843137255 0.933333333333333 1" />
        </material>
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
          filename="package://4ws_auto_infantry/meshes/${file_prefix}_wheel_link.STL" />
        </geometry>
      </collision>
      <inertial>
      <origin
        xyz="5.82867087928207E-16 0.011380912005585 3.33066907387547E-16"
        rpy="0 0 0" />
      <mass
        value="0.052262957020512" />
      <inertia
        ixx="0.000161899986057917"
        ixy="-4.70045889009574E-19"
        ixz="-1.20026720731511E-07"
        iyy="0.000308108500845025"
        iyz="7.35542109619805E-19"
        izz="0.000162472065076815" />
    </inertial>
    </link>
  </xacro:macro>
</robot>
